{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "lib": [
      "ESNext.WeakRef",
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@bindings/taffy": ["./bindings/taffy"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}